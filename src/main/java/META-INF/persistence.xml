<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	
	<persistence-unit name="WSTrocaJogo" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>com.trocajogo.model.Usuario</class>
		<class>com.trocajogo.model.Jogo</class>
		<class>com.trocajogo.model.JogoUsuario</class>
		<class>com.trocajogo.model.Plataforma.Plataforma</class>
		<class>com.trocajogo.model.JogoImagem</class>
		<class>com.trocajogo.model.Troca</class>
		<class>com.trocajogo.model.ItensJogoTroca</class>
		<class>com.trocajogo.model.JogoPlataforma.JogoPlataforma</class>
		<class>com.trocajogo.model.ItemTroca</class>
		<class>com.trocajogo.model.StatusTrocaConverter</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/TrocaJogo" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="11novembro92" />
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.use_sql_comments" value="false" />
			<property name="hibernate.jdbc.wrap_result_sets" value="false" />
			<property name="hibernate.hibernate.cache.use_query_cache"
				value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>
